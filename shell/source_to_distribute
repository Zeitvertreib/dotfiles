# PATH to dir, where this File is located, fetch the others from here
# source this file from within your .bashrc like:
#
# if [ -f ~/path/to/this/file ]; then
    # . ~/path/to/this/file
# fi
#
# DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
# DIR="$( cd "$( dirname "${BASH_SOURCE}" )" && pwd )"
DIR="$( cd "$( dirname "${BASH_SOURCE}" )/../" && pwd )"
DIRsd=$DIR/shell
# rework this..
# for dotfiles // not really needed..
shopt -s dotglob

# list the to load files
list=$(ls -a "$DIRsd"|grep .bash)

for file in $list
do
    if [ -f $DIRsd/$file ]; then
        # echo $DIRsd/$file
        # echo $file
        . $DIRsd/$file
    fi
done

# "plugins"
if [ -f $DIR/openbox/distribute ]; then
    . $DIR/openbox/distribute
fi

if [ -f $DIR/conky/distribute ]; then
    echo found
    . $DIR/conky/distribute
fi
